<% @restaurants.each do |restaurant| %>
  <div class="card m-3">
    <div class="card-body">
      <h5 class="card-title"><%= restaurant.name %></h3>
      <h6 class="card-subtitle"><%= restaurant.category.capitalize %></h4>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Phone: <%= restaurant.phone_number %></li>
      <li class="list-group-item">Address: <%= restaurant.address %></li>
    </ul>
    <div class="card-body">
        <%= link_to "Add Review", new_restaurant_review_path(restaurant), class: "card-link" %>
        <%= link_to "Details", restaurant_path(restaurant), class: "card-link" %>
    </div>
  </div>
<% end %>
